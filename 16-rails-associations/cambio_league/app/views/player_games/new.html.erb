<h1>NEW PLAYER GAME</h1>

<%= form_for @player_game do |f| %>
  <%= f.label :player_id %>
  <%= f.collection_select :player_id, @players,:id, :name%>
  <%= f.label :game_id %>
  <%= f.collection_select :game_id, @games, :id, :room%>
  <%= f.submit %>
<% end %>


