<!DOCTYPE html>
<html>
  <head>
    <title>Authy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= @current_user.username if @current_user %>
    <% if @current_user %>
      <%= button_to("Log out", {action: "logout", controller: "sessions"},method: "delete") %>
    <% else %>
      <%= link_to "Login", "/login_form"%>
    <% end %>

    <%= yield %>
  </body>
</html>
